<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Light Mode) -->
    <style name="Theme.Samiyura" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (Teal - main app branding) -->
        <item name="colorPrimary">#2E8B8B</item>
        <item name="colorPrimaryVariant">#1E5F5F</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color (Pink - action buttons) -->
        <item name="colorSecondary">#d79595</item>
        <item name="colorSecondaryVariant">#c78585</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Surface colors (Light green - cards and surfaces) -->
        <item name="colorSurface">#90EE90</item>
        <item name="colorOnSurface">#000000</item>

        <!-- Background colors -->
        <item name="android:colorBackground">#2E8B8B</item>
        <item name="colorOnBackground">#000000</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Error colors -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">#FFFFFF</item>
    </style>

    <!-- Custom button style for pink buttons with borders -->
    <style name="Theme.Samiyura.PinkButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#000000</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <!-- Custom style for pink image buttons -->
    <style name="Theme.Samiyura.PinkImageButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#000000</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>