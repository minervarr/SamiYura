<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".NamingCeremonyActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/naming_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lmroman_font_family"
        android:text="@string/naming_ceremony_title"
        android:textColor="?attr/colorOnSurface"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/radish_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/naming_prompt_radish"
        android:fontFamily="@font/lmroman_font_family"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/naming_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"/>

    <EditText
        android:id="@+id/edit_text_radish_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name_hint"
        android:inputType="textCapWords"
        android:fontFamily="@font/lmmono_font_family"
        app:layout_constraintTop_toBottomOf="@id/radish_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/lettuce_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/naming_prompt_lettuce"
        android:fontFamily="@font/lmroman_font_family"
        android:textColor="?attr/colorOnSurface"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_radish_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/edit_text_lettuce_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name_hint"
        android:inputType="textCapWords"
        android:fontFamily="@font/lmmono_font_family"
        app:layout_constraintTop_toBottomOf="@id/lettuce_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_start_adventure"
        style="@style/Theme.Samiyura.PinkButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_start_adventure"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>